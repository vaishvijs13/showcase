{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@takeone/types": ["./packages/types/src"],
      "@takeone/utils": ["./packages/utils/src"]
    }
  },
  "include": [
    "packages/**/*",
    "services/**/*",
    "apps/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
} 